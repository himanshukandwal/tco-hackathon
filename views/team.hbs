<!-- ============================================================= SECTION – HERO ============================================================= -->

<section id="hero" class="light-bg img-bg img-bg-softer" style="background-image: url({{event.backgroundImageUrl}});">
  <div class="container inner" style="padding-top:40px;padding-bottom:40px">
    <div class="row">
      <div class="col-md-8">
        <header>
          <h1>{{event.name}}</h1>
          <p>{{event.teaser}}</p>
        </header>
      </div><!-- /.col -->
    </div><!-- ./row -->
  </div><!-- /.container -->
</section>

<!-- ============================================================= SECTION – HERO : END ============================================================= -->

<!-- ============================================================= SECTION – GET STARTED ============================================================= -->
{{#if messages.info}}
<section id="get-started" class="tint-bg">
  <div class="container inner-sm" style="padding-top:20px;padding-bottom:20px">
    <div class="row">
      <div class="col-sm-11 center-block text-center">
        <h1 class="single-block">{{messages.info}}</h1>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section>
{{/if}}

<!-- ============================================================= SECTION – GET STARTED : END ============================================================= -->



<div class="container inner" style="padding-top:10px">
  <div class="row">

    <div class="col-md-8 inner-right-md">

      <!-- ============================================================= SECTION – CONTACTS ============================================================= -->

      <section id="contacts" class="inner-top-md inner-bottom-sm" style="padding-top:50px">

        {{#if isTeam}}

          <h2>Team: {{team.name}}</h2>
          {{#if team.overview}}<p>{{team.overview}}</p>{{/if}}

          <p>Team leader: <a href="http://www.topcoder.com/member-profile/{{team.leader}}" target="_blank">{{team.leader}}</a> <i class="icon-export"></i></p>

        {{else}}

          <h2>{{team.name}}</h2>
          {{#if team.overview}}<p>{{team.overview}}</p>{{/if}}

        {{/if}}

        {{#if team.apiSpins}}

          {{#if isTeamLeader}}
            {{#if submission}}

              <div class="row" style="padding-bottom:15px">
                <div class="col-sm-10">
                  <h3>Your Submission</h3>
                  <ul class="contacts">
                    <li><i class="icon-video"></i> <a href="{{submission.video}}" target="_blank">{{submission.video}}</a></li>
                    <li><i class="icon-github"></i> <a href="{{submission.repoUrl}}" target="_blank">{{submission.repoUrl}}</a></li>
                  </ul><!-- /.contacts -->
                </div><!-- /.col -->
              </div><!-- /.row -->

            {{else}}
              <h2 class="single-block">Submit your entry <a href="/{{event.id}}/teams/{{team.id}}/submit"  class="btn btn-large"><i class="icon-thumbs-up-1"></i> Submit</a></h2>
              <p>You'll need to submit the URL to your 3 minute video (youtube, vimeo or screencast.com) demostrating your application plus the URL to your public git repo containing your code.</p>
            {{/if}}
          {{/if}}

          <div class="row" style="padding-bottom:15px">
            <div class="col-sm-6">
              <h3>APIs</h3>
              <ul class="contacts">
                {{#each team.apiSpins}}
                <li><i class="icon-magic"></i> {{this}}</li>
                {{/each}}
              </ul><!-- /.contacts -->
            </div><!-- /.col -->
          </div><!-- /.row -->

        {{else}}
            {{#if isTeamLeader}}
              {{#if canSpin}}
                <p>We haven't recorded any API spins for you yet. You'll need to <i class="icon-arrows-cw"></i> <a href="/{{event.id}}/teams/{{team.id}}/spin">spin the API wheel</a> to know what APIs to include in your submission.</p>
              {{else}}
                <p class="red">Spinning of the API wheel is not open yet.</p>
              {{/if}}
            {{else}}
              <p>We haven't recorded any API spins for this {{#if isTeam}}team{{else}}participant{{/if}} yet.</p>
            {{/if}}
        {{/if}}

        {{#if isTeamLeader}}
          <p>If you need to modify your team or submission in any way, please contact <a href="mailto:{{event.supportEmail}}">{{event.supportEmail}}</a>.</p>
        {{/if}}

        <p><a href="/{{event.id}}#tab-3"><i class="icon-left-thin"></i> View Other Participating Teams</a></p>

      </section>

      <!-- ============================================================= SECTION – CONTACTS : END ============================================================= -->

    </div><!-- ./col -->

    <div class="col-md-4">

      <!-- ============================================================= SECTION – CONTACT NAMES ============================================================= -->

      <section id="contact-names" class="light-bg inner-xs inner-left-xs inner-right-xs">

        {{#if isTeam}}
          <h3 class="team-headline sidelines text-center"><span>Members</span></h3>
        {{/if}}

        <div class="row thumbs gap-md text-center">

          {{#each team.members}}
          <div class="col-sm-6 thumb">
            <figure class="member">

              <div class="member-image">
                <img src="{{this.pic}}">
              </div><!-- /.member-image -->

              <figcaption class="member-details bordered no-top-border">
                <p><a href="http://www.topcoder.com/member-profile/{{this.handle}}" target="_blank">{{this.handle}}</a></p>
              </figcaption>

            </figure>
          </div><!-- /.col -->
          {{/each}}

        </div><!-- /.row -->

      </section>

      <!-- ============================================================= SECTION – CONTACT NAMES : END ============================================================= -->

    </div><!-- /.col -->

  </div><!-- /.row -->
</div><!-- /.container -->
